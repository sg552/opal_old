<% if @logged_in_user.group.plugin_permissions[plugin.plugin_class.name].can_read? || item.is_user_owner?(@logged_in_user) || @logged_in_user.is_admin? %>	
	<% discussion_count = PluginDiscussion.count(:all, :conditions => ["item_id = ?", item.id]) %>
	<% if discussion_count > 0 %>
		<img src="/themes/<%= @setting[:theme] %>/images/icons/discussion.png" class="icon" title="" alt="">
		<%= link_to "#{discussion_count} #{plugin.model_name.human(:count => discussion_count)}", {:action => "view", :controller => "items", :id => item.id, :anchor => "#{plugin.model_name.human(:count => :other)}"}, :title => "" %>
		<br>
	<% end %>
	
<% end %>
