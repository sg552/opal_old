<% params[:type] ||= "Public" %>
<div class="box_2 menu" align=center>
	<h3 class="title" align=left><%= Page.model_name.human(:count => :other)  %></h3>
	<div class="box_<%= params[:type].downcase == "public" ? "1" : "2" %>" >
		<img src="/themes/<%= @setting[:theme] %>/images/icons/pages.png" class="icon"> 				
		<%= link_to "#{t('activerecord.models.public_page', :count => Page.public_pages.size)} (#{Page.public_pages.size})", {:action => "index", :controller => "pages", :type => "Public"} %>				
	</div>	

	<%  if @setting[:section_blog] %>
	<div class="box_<%= params[:type].downcase == "blog" ? "1" : "2" %>" >
		<img src="/themes/<%= @setting[:theme] %>/images/icons/pages.png" class="icon"> 				
		<%= link_to "#{t('activerecord.models.blog_page', :count => Page.blog_pages.size)} (#{Page.blog_pages.size})", {:action => "index", :controller => "pages", :type => "Blog"} %>				
	</div>	
	<% end %>
	
	<div class="box_<%= params[:type].downcase == "system" ? "1" : "2" %> last">
		<img src="/themes/<%= @setting[:theme] %>/images/icons/pages.png" class="icon"> 				
		<%= link_to "#{t('activerecord.models.system_page', :count => Page.system_pages.size)} (#{Page.system_pages.size})", {:action => "index", :controller => "pages", :type => "System"} %>			
	</div>
	

		
</div>
