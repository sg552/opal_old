<% 
	subpages ||= page.pages.published.display_in_menu.in_order
%>
<div class="box_1" id="page_menu">
		<table style="width:100%" cellpadding=0 cellspacing=0>
			<tr>
				<td align=left>
					<h2 class="title"><%= link_to_page page %></h2>
				</td>
				<td align=right>
					<% if @logged_in_user.is_admin? %>
						<% if page.is_public_page? %>						
							<%= link_to icon("new") + " " + t("label.item_new_child", :item => Page.model_name.human), {:action => "new", :controller => "pages", :id => page} %>
						<% end %>	
					<% end %>
				</td>
			</tr>
		</table>
		<div class="spacer"></div>

		<div class="pages">				
			<% for subpage in subpages %>
				<%= descend_page(subpage) %>
			<% end %>	
		</div>
</div>
