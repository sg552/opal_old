<div class="box_1" align=center>
   <%= form_tag  :action => 'create', :controller => "logs" %>
    <h2>Add Log</h2>
	<% if @parent_log %>
		This will be a Child Log of <b><%= @parent_log.name %></b>
		<input type="hidden" name="parent_id" value="<%= @parent_log.id %>">		
	<% end %>
	<br><br>
	<table cellpadding=0 cellspacing=0>
				<tr>
					<td>Name</td>
					<td><input name="log[name]" type="text" id="log_name" value="<%= @log.name %>" onfocus = "focus_input('log_name')" onblur = "blur_input('log_name')"></td>

					<td>Description</td>
					<td><input name="log[description]" type="text" id="log_description" onfocus = "focus_input('log_description')" onblur = "blur_input('log_description')" maxlength=255 value="<%= @log.description %>" size=50></td>
				</tr>
	</table>
	<br>

	<div align=center>	<input type="submit" value="Create"></div>
   </form>
	 <br>
	 <div align="center">
				<a href="/logs"><img src="/themes/<%= @setting[:theme] %>/images/icons/cancel.png" alt="Cancel" title="Cancel" border=0 class="icon" ></a>
     </div>
</div>